<UserControl x:Class="DataViewer.ManipulativeMultiPlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:src="clr-namespace:DataViewer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas Name="MyCanvas" x:FieldModifier="protected" Background="White">
        <Label Name="MyActiveLabel" Canvas.Right="10" Canvas.Top="10" x:FieldModifier="private" Background="DarkBlue" Foreground="Cyan" FontSize="14"></Label>
        <Label Name="MyParamLabel" Canvas.Right="10" Canvas.Bottom="40" Background="DarkBlue" Foreground="Cyan"></Label>
        <Slider Name="MySlider" Canvas.Right="10" Canvas.Bottom="10" Width="150" SmallChange="1" ValueChanged="MySlider_OnValueChanged"></Slider>
    </Canvas>
</UserControl>
